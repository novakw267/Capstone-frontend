<h2>Create blog</h2>

{{blog-form blog='model'
            save='createBlog'
            cancel='cancel'}}

<div class="form-group">
  <label>Title</label>
  {{input type="text"
          class="form-control"
          value="title"
          maxlength="50"
          placeholder="Title"}}
</div>

<div class="form-group">
  <label>Subject</label>
  {{input type="text"
          class="form-control"
          maxlength="75"
          placeholder="Subject"}}
</div>

<div class="form-group">
  <label>Body</label>
  {{input type="text"
          class="form-control"
          value="description"
          maxlength="500"
          placeholder="Body"}}
</div>

<div class="form-group">
  <label>Author</label>
  {{input type="text"
          class="form-control"
          maxlength="50"
          placeholder="Author"}}
</div>

<button type="submit" class="btn btn-primary" {{action "createBlog"}}>
  Create
</button>

<button class="btn btn-default" {{action "reset"}}>
  Cancel
</button>

{{outlet}}
