<h2>Edit blog</h2>
<form>
<div class="form-group">
  <label>Title</label>
  {{input type="text"
          class="form-control"
          maxlength="50"
          placeholder="Title"
          value=blog.title}}
</div>

<div class="form-group">
  <label>Subject</label>
  {{input type="text"
          class="form-control"
          maxlength="75"
          placeholder="Subject"
          value=blog.subject}}
</div>

<div class="form-group">
  <label>Body</label>
  {{input type="text"
          class="form-control"
          maxlength="500"
          placeholder="Body"
          value=blog.body}}
</div>

<div class="form-group">
  <label>Who is starting stuff?</label>
  {{input type="text"
          class="form-control"
          maxlength="50"
          placeholder="Author"
          value=blog.author}}
</div>


<button type="submit" class="btn btn-success" {{action 'save'}}>
  Update
</button>

{{#link-to "blogs.index" class="btn btn-primary"}}Go Back{{/link-to}}

</form>
